{
  "exclude": [
    "node_modules/",
    "tmp/"
  ],
  "include": [
    "src/",
    "test/",
    "types/"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./cjs/",
    "removeComments": false,
    "resolvePackageJsonExports": false,
    "skipLibCheck": false,
    "strictNullChecks": false,
    "target": "ES2021"
  }
}
